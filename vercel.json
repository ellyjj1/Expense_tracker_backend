{
    "builds": [
      {
        "src": "expense_tracker_backend/wsgi.py",
        "use": "@vercel/python",
        "config": { 
          "maxLambdaSize": "15mb", 
          "runtime": "python3.9"
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "expense_tracker_backend/wsgi.py"
      }
    ],
    "env": {
        "VERCEL": "1",
        "DATABASE_URL": "@database_url"
    },
    "build": {
        "env": {
            "PIP_TARGET": ".pip_target"
        }
    }
}