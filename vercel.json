{
    "builds": [
        {
            "src": "expense_tracker_backend/wsgi.py",
            "use": "@vercel/python",
            "config": { "maxLambdaSize": "15mb" }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "expense_tracker_backend/wsgi.py"
        }
    ],
    "env": {
        "DJANGO_SETTINGS_MODULE": "expense_tracker_backend.settings"
    }
}